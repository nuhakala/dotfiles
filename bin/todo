#!/bin/bash

name=$(date +"%Y%m%d%H%M%S")
date=$(date +"%d.%m.%Y--%H:%M:%S")

todos=~/gtd/

content="# [ ] 

## Tasks

Created: ${date}
"

# ***** TODO *****
if [ $# -eq 0 ]; then
    cd ${todos}
    nvim ./next-action.norg
elif [ "$1" = "some" ]; then 
    cd ${todos}
    nvim ./someday.norg
elif [ "$1" = "next" ]; then 
    cd ${todos}
    nvim ./next-action.norg
fi
